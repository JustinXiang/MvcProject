<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/white</item>
        <item name="colorPrimaryDark">@color/color_b8b8b8</item>
        <item name="colorAccent">@color/color_b8b8b8</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="NoTitle" parent="AppTheme">
        <item name="android:windowFullscreen">true</item>
    </style>

    <style name="BaseDialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowBackground">@color/translucent</item>
        <item name="android:windowFrame">@null</item>
        <!--<item name="android:windowFullscreen">true</item>-->
        <item name="android:windowAnimationStyle">@style/BottomDialog.AnimationStyle</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowTitleStyle">@null</item>
        <!--<item name="colorPrimary">@color/translucent</item>-->
        <!--<item name="colorPrimaryDark">@color/translucent</item>-->
    </style>

    <style name="BottomDialog.AnimationStyle" parent="android:Animation">
        <item name="android:windowEnterAnimation">@anim/slide_in_from_bottom</item>
        <item name="android:windowExitAnimation">@anim/slide_out_to_bottom</item>
    </style>
    <style name="RightDialog.AnimationStyle" parent="android:Animation">
        <item name="android:windowEnterAnimation">@anim/slide_in_from_right</item>
        <item name="android:windowExitAnimation">@anim/slide_out_to_right</item>
    </style>
</resources>
